@{
    Layout = null; // Eğer bir Layout dosyanız varsa, ilgili yolu belirtin.
}
@using _20231129023.ViewModels
@model LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Girişi</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-secondary bg-gradient">
    <div class="container">
        <div class="row justify-content-center align-items-center vh-100">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h3 class="text-center text-primary mb-4">Giriş Yap</h3>
                        <form method="post" asp-action="Login">
                            <!-- Kullanıcı Adı -->
                            <div class="mb-3">
                                <label for="username" class="form-label">Kullanıcı Adı</label>
                                <input type="text" asp-for="UserName" class="form-control" id="username" name="username" placeholder="Kullanıcı Adı" required>
                            </div>

                            <!-- Şifre -->
                            <div class="mb-3">
                                <label for="password" class="form-label">Şifre</label>
                                <input type="password" asp-for="Password" class="form-control" id="password" name="password" placeholder="Şifre" required>
                            </div>

                            <!-- Giriş Butonu -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Giriş Yap</button>
                            </div>
                        </form>

                        <!-- Ek Linkler -->
                        <div class="text-center mt-3">
                            <a href="/Home/Register" class="text-decoration-none">Hesabınız yok mu? Kayıt Ol</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await Component.InvokeAsync("Notyf")
</body>
</html>
