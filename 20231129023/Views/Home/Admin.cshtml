@model IEnumerable<Question>
@{
    ViewData["Title"] = "Admin Paneli";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Paneli</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center text-primary">Admin Paneli</h1>

        <!-- Soru Tablosu -->
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Kullanıcı ID</th>
                    <th>Başlık</th>
                    <th>Soru</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model)
                {
                    <tr>
                        <td>@question.Id</td>
                        <td>@question.UserId</td>
                        <td>@question.QuestionTitle</td>
                        <td>@question.QuestionText</td>
                        <td>@question.Date.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <a href="/Questions/Edit/@question.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a href="/Questions/Delete/@question.Id" class="btn btn-sm btn-danger"
                               onclick="return confirm('Bu soruyu silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Soru Ekleme Butonu -->
        <div class="text-end">
            <a href="/Questions/Create" class="btn btn-success">Soru Ekle</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
